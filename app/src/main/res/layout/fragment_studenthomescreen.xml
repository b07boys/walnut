<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StudentHomescreenFragment">

    <TextView
        android:id="@+id/my_courses_label"
        android:layout_width="105dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:text="My Courses"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/course_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_course_button" />

    <Button
        android:id="@+id/add_course_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add to Course Cart"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_courses_taken"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_courses_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Courses Taken"
        app:layout_constraintEnd_toStartOf="@+id/add_course_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:id="@+id/course_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_courses_label" />

</androidx.constraintlayout.widget.ConstraintLayout>

