<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GeneratedTimelinesFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/frag_gen_timelines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/max_courses"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:hint="Max courses per sem?"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="Previous"
        app:layout_constraintStart_toStartOf="@+id/frag_gen_timelines"
        app:layout_constraintTop_toBottomOf="@+id/generate" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="@+id/frag_gen_timelines"
        app:layout_constraintTop_toBottomOf="@+id/generate" />

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Timelines"
        app:layout_constraintBottom_toBottomOf="@+id/frag_gen_timelines"
        app:layout_constraintEnd_toEndOf="@+id/frag_gen_timelines"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/frag_gen_timelines"
        app:layout_constraintTop_toTopOf="@+id/frag_gen_timelines"
        app:layout_constraintVertical_bias="0.825" />

    <Button
        android:id="@+id/fall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="fall"
        app:layout_constraintEnd_toStartOf="@+id/winter"
        app:layout_constraintTop_toTopOf="@+id/winter" />

    <Button
        android:id="@+id/winter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="winter"
        app:layout_constraintEnd_toEndOf="@+id/frag_gen_timelines"
        app:layout_constraintStart_toStartOf="@+id/frag_gen_timelines"
        app:layout_constraintTop_toTopOf="@+id/frag_gen_timelines" />

    <Button
        android:id="@+id/summer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="summer"
        app:layout_constraintStart_toEndOf="@+id/winter"
        app:layout_constraintTop_toTopOf="@+id/winter" />

    <TextView
        android:id="@+id/startingSessionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Choose starting session"
        app:layout_constraintBottom_toTopOf="@+id/winter"
        app:layout_constraintEnd_toEndOf="@+id/winter"
        app:layout_constraintStart_toStartOf="@+id/winter" />

</androidx.constraintlayout.widget.ConstraintLayout>